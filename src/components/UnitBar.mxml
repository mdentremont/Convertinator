<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  xmlns:objects="objects.*"
		  width="100%" height="75"
		  creationComplete="updateData()">
	<fx:Metadata>
		[Event(name="change", type="spark.events.IndexChangeEvent")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			
			import objects.Data;
			
			import spark.events.IndexChangeEvent;
			[Bindable]
			public var data:ArrayCollection = new ArrayCollection();
			
			private function updateData():void {
				var category:String = tabBar.selectedItem;
				
				data.list = ArrayCollection(Data.categories[category]).list;
			}
			
			private function tabBarClickHandler(event:IndexChangeEvent):void {
				updateData();
				dispatchEvent(event);
			}
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:ButtonBar id="tabBar" dataProvider="{Data.getKeys()}" selectedIndex="0" height="100%" width="100%" change="tabBarClickHandler(event)" requireSelection="true"/>
</s:VGroup>